<div class="container m-3 ">
  <h1><%=@list.name%></h1>
    <% @list.movies.each do |movie|%>
      <div class="card-product">
        <img src= "<%=image_path('Bollywood.jpg')%>" />
        <div class="card-product-infos">
          <li class= "text-center bold"> - <%=movie.title%> <%=movie.rating%></li>
          <li> <%=movie.overview%></li>
    <% end %>
        <br>
        </ul>
        <% @list.bookmarks.each do |bookmark|%>
          <p> <em><%=bookmark.comment%>
          <%# calcul le moment actuel et le l'heure de creation %>
          </em> <small><em class="text-muted"><%= distance_of_time_in_words_to_now(bookmark.created_at) %> ago</em></small> </p>
          <div class = "delete-btn-show">
            <%= link_to "âœ˜ Delete your comment", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn  justify-content-center"%>
          </div>
      </div>
    <% end %>
  </div>

    <%= link_to "Back to my list", lists_path, class: "btn btn-ghost justify-content-center"%>
    <%= link_to "Add a movie to my list", new_list_bookmark_path(@list), class: "btn btn-ghost justify-content-center"%>
</div>
